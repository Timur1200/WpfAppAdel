<Page x:Class="WpfApp1.Pages.MainWindowPage.Client.SelectedOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.MainWindowPage.Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectedOrderPage" Loaded="Page_Loaded">

    <Grid Background="AntiqueWhite">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TBlockNum" />
            <TextBlock />
            <ListBox x:Name="LBoxProd" />
            <TextBlock />
            <Button Name="Btn1" Click="SelectPridClick" Content="Выбрать блюдо" FontSize="14" />
            <TextBlock />
            <TextBlock HorizontalAlignment="Center" Name="TBlockAllSum" />
            <TextBlock x:Name="TBlock1" Text="Введите ваш адрес" />
            <TextBox AcceptsReturn="True" x:Name="TBoxAddress" />
            <TextBlock Name="TBlock2" Text="Дополнительная информация" />
            <TextBox AcceptsReturn="True" x:Name="TBoxDesc" />
            <TextBlock />
            <Button Name="Btn2" Click="CompleteClick" Content="Завершить" />
        </StackPanel>
        
    </Grid>
</Page>
