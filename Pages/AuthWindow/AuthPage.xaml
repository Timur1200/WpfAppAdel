<Page x:Class="WpfApp1.Pages.AuthWindow.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.AuthWindow"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="AuthPage">

    <Grid Background="AliceBlue">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите ваш номер логин" FontSize="14" HorizontalAlignment="Center" />
            <TextBox Name="TBoxNumber" Width="250" FontSize="14" />
            <TextBlock />
            <TextBlock Text="Введите ваш пароль" FontSize="14" HorizontalAlignment="Center" />
            <PasswordBox Name="TBoxPass" Width="250" FontSize="14" />
            <TextBlock />
            <Button Click="AuthClick" FontSize="16" Width="100" Content="Войти" Background="Orange" />
            <TextBlock />
            <Button Click="RegClick" Width="150" Content="Регистрация" Background="Orange" />
            <TextBlock />
           
        </StackPanel>
        
        
    </Grid>
</Page>
